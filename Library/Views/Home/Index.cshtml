@model List<LogicLibrary.Models.Book>

@{
    ViewBag.Title = "My library";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Author</th>
            <th>Language</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Category</td>
                <td>@book.Author</td>
                <td>@book.Language</td>
                <td>
                    <a asp-action="View" asp-route-id="@book.Id" class="btn btn-secondary btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Remove" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="text-end">
    <a asp-action="Add" class="btn btn-primary">Add new book</a>
</div>