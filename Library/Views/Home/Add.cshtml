@model LogicLibrary.Models.Book

@{
    ViewBag.Title = "Add book";
}

<form asp-action="Add" method="post">
    <div class="form-group">
        <input asp-for="Title" placeholder="Title" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <input asp-for="Author" placeholder="Author" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <input asp-for="Description" placeholder="Description" class="form-control" />
        <br />
    </div>
    <div class="form-group">
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<LogicLibrary.Models.Book.CategoryType>()" class="form-control">
            <option value="">-- Select Category --</option>
        </select>
        <br />
    </div>

    <div class="form-group">
        <select asp-for="Language" asp-items="Html.GetEnumSelectList<LogicLibrary.Models.Book.LanguageType>()" class="form-control">
            <option value="">-- Select Language --</option>
        </select>
        <br />
    </div>
    <div class="form-group">
        <input asp-for="Url" placeholder="Url" class="form-control" />
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>